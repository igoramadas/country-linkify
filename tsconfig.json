{
    "compilerOptions": {
        "baseUrl": "",
        "rootDir": "src",
        "outDir": "lib",
        "target": "ES2023",
        "module": "CommonJS",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "declaration": true
    },
    "typedocOptions": {
        "entryPoints": ["./src/"],
        "excludeExternals": true,
        "excludePrivate": true,
        "name": "Country Linkify",
        "out": "docs"
    }
}
