// COUNTRY LINKIFY DEFAULT SETTINGS

{
    "app": {
        // Default URL to return for links that have no matching ID or country.
        "defaultUrl": "https://amzn.to/3mcBqgX",
        // Homepage should redirect to this URL. If set to "null",
        // it will redirect to the defaultUrl above.
        "homeUrl": "https://devv.com/",
        // Application title.
        "title": "Country Linkify"
    },
    // If country can't be determined or there's no link for the user's country.
    "country": {
        "default": "us",
        "es": ["mt", "pt"],
        "de": ["at", "be", "ch", "cz", "dk", "ee", "gi", "fi", "fr", "hu", "ie", "it", "nl", "no", "pl", "se", "sk"]
    },
    "links": {
        // Auto reload links when the JSON files change. Set to false to disable.
        "autoReload": true,
        // If set to true and more than 1 URL is set for a particular link / country,
        // it will return a random URL from the array instead of the very first one.
        "randomize": false
    },
    // URLS to the base search queries, the actual query will be replaced on the ${query} tag.
    "search": {
        "es": "https://www.amazon.es/s?linkCode=ll2&tag=devv0a-21&ref_=as_li_ss_tl&k=${query}",
        "uk": "https://www.amazon.co.uk/s?linkCode=ll2&tag=devv0c-21&ref_=as_li_ss_tl&k=${query}",
        "us": "https://www.amazon.com/s?&linkCode=ll2&tag=devv08-20&ref_=as_li_ss_tl&k=${query}"
    },
    // Default encoding is set to UTF-8.
    "encoding": "utf8"
}
